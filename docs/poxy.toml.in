author = 'Edgar B'
cpp = 20
description = 'Utilities for Bethesda games'
github = 'Guekka/bethutil'
license = [ 'MPL', 'https://github.com/Guekka/bethutil/blob/main/LICENSE' ]
name = 'bethutil'
navbar = [ 'classes', 'namespaces' ]

[badges]
'build' = [
	'https://img.shields.io/github/workflow/status/Guekka/bethutil/Main%20CI?logo=github&style=flat-square',
	'https://github.com/Guekka/bethutil/actions/workflows/main_ci.yml'
]
'codecov' = [
	'https://img.shields.io/codecov/c/github/Guekka/bethutil?logo=codecov&logoColor=white&style=flat-square',
	'https://app.codecov.io/gh/Guekka/bethutil'
]

[macros]
'protected' = 'private'
'BETHUTIL_VISIBLE' = ''

[sources]
extract_all = true
paths = [ '@DOCS_DIR@/index.doxy' ]
recursive_paths = [ '@INCLUDE_DIR@' ]
strip_paths = [ '@INCLUDE_DIR@' ]

[warnings]
treat_as_errors = true
